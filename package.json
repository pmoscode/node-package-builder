{
  "name": "@pmoscode/node-package-builder",
  "version": "1.1.0",
  "description": "A node package helper which assists you in organizing your package.json for multiple environment",
  "bin": {
    "npb": "bin/npb.js"
  },
  "keywords": [
    "npm",
    "package.json",
    "staging",
    "merge"
  ],
  "main": "bin/npb.js",
  "types": "bin/npb.d.ts",
  "repository": "https://gitlab.com/pmoscode/node-package-builder.git",
  "author": "Peter Motzko <info@pmoscode.de>",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc && ./prepare_npm_publish.sh",
    "watch": "yarn tsc --watch",
    "lint": "eslint '**/*.{ts,tsx}' --quiet --fix",
    "test": "jest",
    "bump:minor": "yarn version --minor",
    "bump:patch": "yarn version --patch"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "lodash.merge": "^4.6.2",
    "tslog": "^4.8.2"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.10",
    "@types/jest": "^29.5.1",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.7",
    "typedoc-neo-theme": "^1.1.1",
    "typescript": "5.0.4"
  }
}
