{
  "name": "@pmoscode/node-package-builder",
  "version": "1.1.87",
  "description": "A node package helper which assists you in organizing your package.json for multiple environment",
  "bin": {
    "npb": "bin/npb.js"
  },
  "keywords": [
    "npm",
    "package.json",
    "staging",
    "stage",
    "merge",
    "management",
    "manage",
    "versions"
  ],
  "main": "bin/npb.js",
  "types": "bin/npb.d.ts",
  "repository": "https://gitlab.com/pmoscode/node-package-builder.git",
  "author": "Peter Motzko <info@pmoscode.de>",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc && ./prepare_npm_publish.sh",
    "watch": "yarn tsc --watch",
    "lint": "eslint '**/*.{ts,tsx}' --quiet --fix",
    "test": "jest",
    "bump:minor": "yarn version --minor",
    "bump:patch": "yarn version --patch"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "lodash.merge": "^4.6.2",
    "tslog": "^4.9.3"
  },
  "devDependencies": {
    "@mxssfd/typedoc-theme": "^1.1.7",
    "@types/argparse": "^2.0.17",
    "@types/jest": "^30.0.0",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.13",
    "typescript": "5.9.2"
  }
}
